{
	"$schema": "https://json.schemastore.org/prettierrc",

	"printWidth": 100,

	"useTabs": true,
	"tabWidth": 2,

	"semi": false,
	"singleQuote": true,
	"quoteProps": "as-needed",

	"trailingComma": "all",
	"bracketSpacing": true,
	"arrowParens": "always",

	"endOfLine": "lf",

	"overrides": [
		{
			"files": "*.md",
			"options": {
				"useTabs": false,
				"printWidth": 80
			}
		},
		{
			"files": "*.yml",
			"options": {
				"useTabs": false
			}
		}
	]
}
